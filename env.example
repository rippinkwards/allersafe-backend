# Environment Configuration for AllerSafe API

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017

# Stripe Integration (Required for payments)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here

# Twilio Integration (Required for emergency SMS alerts)  
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567  # Your Twilio phone number

# SendGrid Integration (Required for welcome emails)
# Get these from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDER_EMAIL=noreply@yourdomain.com  # Verified sender email in SendGrid

# Frontend URL (for QR codes and email links)
FRONTEND_URL=http://localhost:3000